{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "inlineSources": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@domain/*": [
        "src/domain/*"
      ],
      "@aggregates/*": [
        "src/domain/aggregates/*"
      ],
      "@interfaces/*": [
        "src/domain/interfaces/*"
      ],
      "@models/*": [
        "src/domain/models/*"
      ],
      "@helpers/*": [
        "src/domain/helpers/*"
      ]
    }
  },
  "include": [
    "src/server.ts",
    "specs/**/*"
  ]
}
